# git commands
abbr -g amend='git commit --amend'
abbr -g clean='git branch --merged|egrep -v "\*|develop|master"|xargs git branch -d'
abbr -g ga="git add"
abbr -g gb="git branch"
abbr -g gc="git commit -v"
abbr -g gco="git checkout"
abbr -g gst="git status"
abbr -g gl="git log -p --stat"
abbr -g gpl="git pull"
abbr -g gps="git push"
abbr -g gr="git rebase"
abbr -g gas="git rebase -i --autosquash HEAD~"
abbr -g prc="gh pr checkout"

# Ruby
abbr -g b="bundle"
abbr -g bi="bundle install"
abbr -g bx="bundle exec"
abbr -g br="bundle exec rspec"
abbr -g bcop="bundle exec rubocop"

# Rails
abbr -g brs="bin/rails s"
abbr -g brc="bin/rails c"

# Docker
abbr -g dc="docker compose"
